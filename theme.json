{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "shadow": {
      "defaultPresets": false
    },
    "blocks": {
      "core/columns": {
        "spacing": {
          "blockGap": true
        }
      }
    }
  },
  "styles": {
    "blocks": {
      "core/columns": {
        "spacing": {
          "blockGap": "3rem"
        }
      }
    }
  }
}
